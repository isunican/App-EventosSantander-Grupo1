<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- default -->
<item
    android:state_pressed="false"
    android:state_focused="false">
    <shape>
        <stroke
            android:width="2dp"
            android:color="#000" />
        <padding
            android:left="1dp"
            android:top="1dp"
            android:right="1dp"
            android:bottom="1dp" />
        <solid android:color="@color/white" />
        <corners
            android:bottomRightRadius="8dip"
            android:bottomLeftRadius="8dip"
            android:topRightRadius="8dip"
            android:topLeftRadius="8dip" />
    </shape>
</item>

<!-- button focused -->
<item
    android:state_pressed="false"
    android:state_focused="true">
    <shape>
        <stroke
            android:width="2dp"
            android:color="#000" />
        <padding
            android:left="1dp"
            android:top="1dp"
            android:right="1dp"
            android:bottom="1dp" />
        <solid android:color="@color/black" />
        <corners
            android:bottomRightRadius="8dip"
            android:bottomLeftRadius="8dip"
            android:topRightRadius="8dip"
            android:topLeftRadius="8dip" />
    </shape>
</item>

<!-- button pressed -->
<item
    android:state_pressed="true"
    android:state_focused="false">
    <shape>
        <stroke
            android:width="2dp"
            android:color="#000" />
        <padding
            android:left="1dp"
            android:top="1dp"
            android:right="1dp"
            android:bottom="1dp" />
        <solid android:color="@android:color/darker_gray" />
        <corners
            android:bottomRightRadius="8dip"
            android:bottomLeftRadius="8dip"
            android:topRightRadius="8dip"
            android:topLeftRadius="8dip" />
    </shape>
</item>
</selector>